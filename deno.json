{
  "imports": {
    "lume/": "https://cdn.jsdelivr.net/gh/lumeland/lume@1216f68c53431a732c4022a17cf20ad454609cf6/",
    "lume/jsx-runtime": "https://deno.land/x/ssx@v0.1.9/jsx-runtime.ts"
  },
  "lock": false,
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "lume",
    "types": [
      "lume/types.ts"
    ]
  },
  "tasks": {
    "build": "deno task lume",
    "serve": "deno task lume -s",
    "lume": "echo \"import 'lume/cli.ts'\" | deno run -A -"
  },
  "lint": {
    "exclude": [
      "./_site"
    ],
    "rules": {
      "tags": [
        "recommended"
      ]
    },
    "plugins": [
      "https://cdn.jsdelivr.net/gh/lumeland/lume@1216f68c53431a732c4022a17cf20ad454609cf6/lint.ts"
    ]
  },
  "fmt": {
    "exclude": [
      "./_site"
    ]
  },
  "unstable": [
    "temporal"
  ]
}
